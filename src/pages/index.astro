---
import Layout from '../layouts/Layout.astro';

const github = {
	name: 'Aydrian Howard',
	username: 'aydrian',
	bio: 'Hoosier in the big city. Corgi Dad. Uncle. Nerd. I prefer TypeScript, but I\'ve dabbled in Python and Ruby. Continuously learning Rust.',
	avatar: 'https://avatars.githubusercontent.com/u/981130?v=4',
	location: 'New York, NY',
	followers: 59,
	repos: 120,
	website: 'https://itsaydrian.com'
};
---

<Layout>
	<main class="min-h-[70vh] flex flex-col items-center justify-center text-center p-8">
		<img src={github.avatar} alt={`${github.name} avatar`} class="w-36 h-36 rounded-full shadow-lg mb-4" />
		<h1 class="text-3xl font-semibold">{github.name}</h1>
		<p class="max-w-[56ch] mt-2 text-gray-600">{github.bio}</p>
		<p class="text-gray-500 text-sm mb-4 mt-2">{github.location} · {github.followers} followers · {github.repos} repos</p>
		<div class="flex items-center">
			<a href={`https://github.com/${github.username}`} class="bg-black text-white px-4 py-2 rounded-full font-semibold mr-3 hover:opacity-95" target="_blank" rel="noopener">View on GitHub</a>
			<a href={github.website} class="text-blue-600 hover:underline" target="_blank" rel="noopener">itsaydrian.com</a>
		</div>
	</main>
</Layout>
